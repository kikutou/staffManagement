doctype html
html
    head
        title 学習内容
        meta(charset='UTF-8')
        //Import jQuery
        include jQuery_import.jade
        //DatePicker
        script(type='text/javascript' src='/javascripts/datepicker.js')
        //Import script & css
        style.
            table{border-collapse: collapse;}
            table, th, td{border: 1px solid black;}
            td{text-align: center;}
        link(rel='stylesheet' type='text/css' href='/stylesheets/study.css')

    body
        include top.jade
        include side_bar

        div.box
            div.study_table
                form(method='post')
                    div
                        table
                            tr
                                th 日期
                                th 学習内容
                                th 自己評価
                            mixin tbdata(weeks)
                                tr
                                    td: input.study_date(type='date' name='study_date'+weeks)
                                    td: textarea(name='study_content'+weeks)
                                    td: textarea(name='self_evaluation'+weeks)

                            -for (var i=1; i<8; i++)
                                +tbdata(i)

                    div.study_button
                        div.study_submit
                            input(type='submit' value='確認')
                        div.study_modify
                            input(type='button' value='修正')